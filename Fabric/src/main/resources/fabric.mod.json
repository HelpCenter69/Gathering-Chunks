{
  "schemaVersion": 1,
  "id": "chunkbychunk",
  "version": "${version}",

  "name": "Chunk By Chunk",
  "description": "This mod starts the overworld with a single chunk, but provides the tools to expand to world one chunk at a time.",
  "authors": [
    "Ryvione",
    "Wallie Studios"
  ],
  "contact": {
    "homepage": "https://ryvione.vercel.app/minecraft/mod/chunkbychunk",
    "sources": "https://github.com/ryvione/chunkbychunk"
  },

  "license": "MIT License",
  "icon": "assets/chunkbychunk/textures/block/chunkspawner-north.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.ryvione.chunkbychunk.fabric.ChunkByChunkMod"
    ],
    "client": [
      "com.ryvione.chunkbychunk.fabric.ChunkByChunkClientMod"
    ],
    "modmenu": [ "com.ryvione.chunkbychunk.fabric.ModMenuApiImpl" ]
  },
  "mixins": [
    "chunkbychunk.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.16.9",
    "fabric": "*",
    "minecraft": ">=1.21.1",
    "java": ">=21"
  },
  "suggests" : {
    "modmenu" : ">=3.1.0",
    "jei" : ">=10.2.1.1002"
  }
}
